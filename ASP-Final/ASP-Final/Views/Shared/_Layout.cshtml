    <script>


        $.validate({
            modules: 'security'
        });

        var owl = $('.owl-carousel');
        owl.owlCarousel({
            margin: 10,
            loop: true,
            nav: true,
            autoplay: true,
            navClass: ['owl-prev', 'owl-next'],
            responsive: {
                0: {
                    items: 1
                },
                400: {
                    items: 2
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 7
                }
            }
        })

        $(".owl-prev").html('<i class="fa fa-chevron-left fa-lg" style></i>');
        $(".owl-next").html('<i class="fa fa-chevron-right fa-lg"></i>');
    </script>
