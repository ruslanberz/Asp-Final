@model IEnumerable<ASP_Final.Models.Blog>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SmallImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BigImage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @item.Date.ToString("dd.MM.yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categ)
            </td>
            <td>
                <img src="~/Public/images/upload/@item.SmallImage" height="100px" alt="Alternate Text" />

            </td>
            <td>
                <img src="~/Public/images/upload/@item.BigImage" height="100px" alt="Alternate Text" />

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>